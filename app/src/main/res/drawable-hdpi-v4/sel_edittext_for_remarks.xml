<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <gradient android:startColor="#ff058bf5" android:endColor="#ff015ee6" android:angle="270"/>
            <stroke android:width="2px" android:color="#e6e6e6"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <solid android:color="#ffffffff"/>
            <stroke android:width="2px" android:color="#e6e6e6"/>
        </shape>
        <shape android:shape="line">
            <stroke android:width="2px" android:color="@color/bg_blue1"/>
        </shape>
    </item>
</selector>
