<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/gray" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/set_rl_f" android:layout_width="match_parent" android:layout_height="50dp">
        <Button android:id="@+id/btn_set_back" android:background="@drawable/sel_arrow_gray2black_left" android:layout_width="50dp" android:layout_height="50dp" android:scaleType="center" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_goal" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <Button android:id="@+id/btn_sort" android:background="@drawable/sel_translate2half" android:layout_width="50dp" android:layout_height="50dp" android:scaleType="center" android:text="@string/str_sort" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/style_txt_content"/>
    </RelativeLayout>
    <View android:id="@+id/v_line_1" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_goal_list_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <Button android:textColor="@color/black_tran_es" android:id="@+id/btn_goal_list_under_way" android:background="@drawable/sel_white2blue" android:layout_width="50dp" android:layout_height="30dp" android:layout_marginLeft="1px" android:layout_marginRight="1px" android:text="@string/str_under_way" android:layout_weight="1"/>
        <Button android:textColor="@color/black_tran_es" android:id="@+id/btn_goal_list_finished" android:background="@drawable/sel_white2blue" android:layout_width="50dp" android:layout_height="30dp" android:layout_marginLeft="1px" android:layout_marginRight="1px" android:text="@string/str_finished" android:layout_weight="1"/>
        <Button android:textColor="@color/black_tran_es" android:id="@+id/btn_goal_list_deleted" android:background="@drawable/sel_white2blue" android:layout_width="50dp" android:layout_height="30dp" android:layout_marginLeft="1px" android:layout_marginRight="1px" android:text="@string/str_deleted" android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_goal_list_items" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    </ScrollView>
</LinearLayout>
