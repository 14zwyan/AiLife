                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/main_layout_myExam" android:layout_width="match_parent" android:layout_height="match_parent">
