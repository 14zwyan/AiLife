                        <ImageView android:id="@+id/tv_tem_bottom_everyday" android:layout_width="match_parent" android:layout_height="25dp" android:src="@drawable/ic_bottom_everyday" android:scaleType="centerInside"/>
                        <TextView android:textSize="12sp" android:textColor="@color/gray_title" android:gravity="center" android:id="@+id/tv_tem_statistic" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str_everyDay" android:layout_below="@+id/tv_tem_bottom_everyday"/>
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/main_layout_message" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RelativeLayout android:gravity="center_horizontal" android:id="@+id/rl_tem_bottom_menu_3" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <ImageView android:id="@+id/tv_tem_bottom_getup" android:layout_width="match_parent" android:layout_height="25dp" android:src="@drawable/ic_bottom_getup" android:scaleType="centerInside"/>
                        <TextView android:textSize="12sp" android:textColor="@color/gray_title" android:gravity="center" android:id="@+id/tv_tem_getUp" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str_statics" android:layout_below="@+id/tv_tem_bottom_getup"/>
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/main_layout_settings" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RelativeLayout android:gravity="center_horizontal" android:id="@+id/rl_tem_bottom_menu_4" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <ImageView android:id="@+id/tv_tem_bottom_me" android:layout_width="match_parent" android:layout_height="25dp" android:src="@drawable/ic_bottom_me" android:scaleType="centerInside"/>
                        <TextView android:textSize="12sp" android:textColor="@color/gray_title" android:gravity="center" android:id="@+id/tv_tem_more" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str_me" android:layout_below="@+id/tv_tem_bottom_me"/>
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</TabHost>
