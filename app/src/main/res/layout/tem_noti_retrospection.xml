<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:id="@+id/rl_noti_show_outer" android:background="@color/black_tran_ts" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
    <RelativeLayout android:id="@+id/rl_noti_show_label_bg" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp" android:layout_centerVertical="true">
        <ImageView android:id="@+id/iv_noti_show_label" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_itodayss_circle2_48" android:scaleType="center" android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_noti_show_tv_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/iv_noti_show_set" android:layout_toRightOf="@+id/rl_noti_show_label_bg" android:layout_centerVertical="true">
        <TextView android:textSize="14sp" android:textColor="@color/white2" android:gravity="bottom" android:id="@+id/tv_noti_show_actName" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="5dp" android:maxWidth="70dp" android:text="回顾下今天的成长" android:singleLine="true" android:layout_weight="2"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:ellipsize="marquee" android:gravity="top" android:id="@+id/tv_noti_show_remark" android:focusable="true" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="5dp" android:text="点击添加" android:layout_weight="1" android:marqueeRepeatLimit="marquee_forever"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_noti_show_set" android:layout_width="25dp" android:layout_height="30dp" android:layout_marginRight="10dp" android:src="@drawable/ic_set_gray_v2" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
