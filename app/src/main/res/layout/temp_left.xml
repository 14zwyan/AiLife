<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_window" android:layout_width="40dp" android:layout_height="30dp" android:src="@drawable/ic_window_right"/>
    <RelativeLayout android:background="#08000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/iv_window">
        <Button android:id="@+id/btn_left" android:background="@drawable/sel_arrow_gray2black_left" android:layout_width="40dp" android:layout_height="90dp" android:scaleType="center"/>
        <Button android:id="@+id/btn_right" android:background="@drawable/sel_arrow_gray2black" android:layout_width="40dp" android:layout_height="90dp" android:scaleType="center" android:layout_below="@+id/btn_left"/>
        <View android:id="@+id/v_line" android:background="@android:color/white" android:layout_width="40dp" android:layout_height="1px" android:layout_below="@+id/btn_left"/>
    </RelativeLayout>
</RelativeLayout>
