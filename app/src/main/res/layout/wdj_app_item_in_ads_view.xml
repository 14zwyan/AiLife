<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:background="@drawable/wdj_ads_card_background_normal" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="80dp">
    <com.wandoujia.ads.sdk.volley.toolbox.NetworkImageView android:id="@+id/icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:scaleType="centerCrop" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <Button android:textSize="14dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/action_button" android:background="@drawable/wdj_ads_action_button_background" android:layout_width="60dp" android:layout_height="30dp" android:layout_marginLeft="15dp" android:layout_marginTop="18dp" android:layout_marginRight="15dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <TextView android:textSize="20dp" android:textColor="#333333" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:singleLine="true" android:layout_toLeftOf="@+id/action_button" android:layout_toRightOf="@+id/icon" android:layout_alignParentTop="true"/>
    <TextView android:textSize="13dp" android:textColor="#aaaaaa" android:gravity="center_vertical" android:id="@+id/sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="15dp" android:singleLine="true" android:layout_toRightOf="@+id/icon" android:layout_below="@+id/title"/>
    <TextView android:textSize="13dp" android:textColor="#777777" android:ellipsize="end" android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:maxLines="2" android:layout_below="@+id/icon" android:layout_alignLeft="@+id/icon" android:lineSpacingExtra="3dp"/>
    <TextView android:textSize="11dp" android:textColor="#aaaaaa" android:gravity="center" android:id="@+id/tag" android:layout_width="60dp" android:layout_height="16dp" android:layout_alignBottom="@+id/icon" android:layout_alignParentRight="true"/>
    <ImageView android:id="@+id/badge" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textSize="13dp" android:textColor="#aaaaaa" android:gravity="center_vertical" android:id="@+id/download_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignLeft="@+id/sub_title" android:layout_alignBottom="@+id/sub_title"/>
    <TextView android:textSize="13dp" android:gravity="center_vertical" android:id="@+id/download_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/title" android:layout_alignLeft="@+id/download_status"/>
    <ProgressBar android:id="@+id/download_progress" android:layout_width="wrap_content" android:layout_height="5dp" android:layout_marginTop="3dp" android:max="100" android:indeterminateOnly="false" android:progressDrawable="@drawable/wdj_ads_progress_bar_background" android:layout_toLeftOf="@+id/action_button" android:layout_below="@+id/download_speed" android:layout_alignLeft="@+id/download_speed"/>
</RelativeLayout>
