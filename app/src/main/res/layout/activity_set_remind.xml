<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:orientation="vertical" android:background="@color/gray" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_set_remind_title" android:layout_width="match_parent" android:layout_height="50dp">
        <Button android:id="@+id/btn_set_back" android:background="@drawable/sel_arrow_gray2black_left" android:layout_width="50dp" android:layout_height="50dp" android:scaleType="center" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_remind" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/v_line_1" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1px"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_sel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_add_sleep_record" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="@string/str_remind_add_sleep"/>
                    <ImageView android:id="@+id/iv_set_remind_add_sleep_record" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_morning_pre" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="@string/str_Morning_voice"/>
                    <ImageView android:id="@+id/iv_set_remind_morning" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_morning_time" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="提醒时间：21:00" android:layout_alignParentRight="true"/>
                <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_morning" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1px" android:text="@string/str_moning_voice_prompt" android:layout_alignParentRight="true"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_retrospection" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="@string/str_summarize"/>
                    <ImageView android:id="@+id/iv_set_remind_retrospection" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_retrospection_value" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="提醒时间：21:00" android:layout_alignParentRight="true"/>
                <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_summarize" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1px" android:text="@string/str_summarize_prompt" android:layout_alignParentRight="true"/>
                <RelativeLayout android:id="@+id/rl_set_remind_rest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_rest" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="@string/str_remind_rest"/>
                    <ImageView android:id="@+id/iv_set_remind_rest" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_set_remind_rest_all" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_rest_all" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="@string/str_Globally"/>
                    <ImageView android:id="@+id/iv_set_remind_rest_all" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_set_remind_rest_time" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <Button android:textSize="15sp" android:id="@+id/btn_set_remind_rest_time" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="休息:5分钟" android:layout_alignParentRight="true"/>
                    <Button android:textSize="15sp" android:gravity="center_vertical" android:id="@+id/btn_set_remind_learn_time" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="学习：45分钟" android:layout_weight="1" android:layout_toLeftOf="@+id/btn_set_remind_rest_time"/>
                </RelativeLayout>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_set_remind_rest_sound" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <Button android:textSize="15sp" android:id="@+id/btn_set_remind_rest_class_over" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="休息铃声:OFF" android:layout_alignParentRight="true"/>
                    <Button android:textSize="15sp" android:gravity="center_vertical" android:id="@+id/btn_set_remind_rest_class_start" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="学习铃声：ON" android:layout_weight="1" android:layout_toLeftOf="@+id/btn_set_remind_rest_class_over"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_interval" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="@string/str_remind_interval"/>
                    <ImageView android:id="@+id/iv_set_remind_interval" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_set_remind_interval_items" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <Button android:textSize="15sp" android:id="@+id/btn_set_remind_interval_sound" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="声音:开" android:layout_alignParentRight="true"/>
                    <Button android:textSize="15sp" android:id="@+id/btn_set_remind_interval_led" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="LED:开" android:layout_toLeftOf="@+id/btn_set_remind_interval_sound"/>
                    <Button android:textSize="15sp" android:gravity="center_vertical" android:id="@+id/btn_set_remind_interval_shake" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="震动：ON" android:layout_weight="1" android:layout_toLeftOf="@+id/btn_set_remind_interval_led"/>
                </RelativeLayout>
                <Button android:textSize="15sp" android:gravity="center_vertical" android:id="@+id/btn_set_remind_interval_time" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="间隔：30分钟" android:layout_weight="1" android:layout_toLeftOf="@+id/btn_set_remind_rest_time"/>
                <Button android:textSize="15sp" android:gravity="center_vertical" android:id="@+id/btn_set_remind_interval_rest_clock" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="休息时段：23，24" android:singleLine="true" android:layout_weight="1"/>
                <Button android:textSize="15sp" android:gravity="center_vertical" android:id="@+id/btn_set_remind_interval_prompt_dialog" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="@string/str_interval_show_dialog" android:singleLine="true" android:layout_weight="1"/>
                <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_update_ui_interval" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="10dp" android:text="@string/str_update_ui_interval" android:layout_alignParentRight="true"/>
                <RelativeLayout android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_fixed_time" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="定时提醒"/>
                    <ImageView android:id="@+id/iv_set_remind_fixed_time" android:layout_width="wrap_content" android:layout_height="@dimen/setting_bar_high" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_set_remind_fixed_time_value" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/setting_bar_high" android:layout_marginTop="1dp" android:text="间隔时间：21:00" android:layout_alignParentRight="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
