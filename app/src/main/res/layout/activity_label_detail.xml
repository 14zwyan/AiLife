<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:orientation="vertical" android:background="@color/gray" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/set_rl_f" android:layout_width="match_parent" android:layout_height="50dp">
        <Button android:id="@+id/btn_label_back" android:background="@drawable/sel_arrow_gray2black_left" android:layout_width="50dp" android:layout_height="50dp" android:scaleType="center" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@android:color/black" android:id="@+id/tv_label_detail_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="180dp" android:text="标签" android:singleLine="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/v_line_1" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1px"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/black" android:id="@+id/tv_label_detail_sum" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:text="累计花费：（无记录)"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/black" android:id="@+id/tv_label_detail_avg" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="1px" android:layout_marginRight="15dp" android:text="平均花费：（无记录)"/>
    <TextView android:textSize="16sp" android:textColor="@android:color/black" android:id="@+id/tv_label_detail_min" android:background="@color/white" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="1dp" android:layout_marginRight="15dp" android:text="最少时间：（无记录)"/>
    <ScrollView android:id="@+id/ll_sel" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_laber_info_items" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
    </ScrollView>
    <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/tv_label_detail_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="提示：长按标签可进行删除。"/>
</LinearLayout>
