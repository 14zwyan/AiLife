    <ImageView android:id="@+id/iv_temp_color2" android:layout_width="15dp" android:layout_height="10dp" android:layout_marginTop="2dp" android:src="@drawable/ic_shape_tri" android:scaleType="fitXY" android:layout_toRightOf="@+id/iv_temp_color"/>
