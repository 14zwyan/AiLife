    <TextView android:id="@+id/h_tv_id" android:visibility="gone" android:layout_width="50dp" android:layout_height="60dp"/>
    <TextView android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/h_tv_start" android:layout_width="50dp" android:layout_height="60dp" android:text="15:21"/>
