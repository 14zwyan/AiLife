    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_today_add" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:layout_below="@+id/ll_today_status">
        <com.record.view.wheel.widget.WheelView android:id="@+id/wv_tem_hour1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_weight="2"/>
        <com.record.view.wheel.widget.WheelView android:id="@+id/wv_tem_min1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="2"/>
        <TextView android:textColor="@color/black" android:gravity="center" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="â€”" android:layout_weight="1"/>
