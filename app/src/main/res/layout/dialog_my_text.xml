<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:background="@color/gray" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="280dp">
    <TextView android:textSize="17sp" android:textColor="@color/black_tran_es" android:id="@+id/tv_dialog_text_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="确认删除"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_dialog_view" android:background="@color/translate" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_dialog_text_title">
        <TextView android:textSize="14sp" android:textColor="@color/black_tran_es" android:id="@+id/tv_dialog_text_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="删除，会同时删除其它数据，是否删除？" android:layout_below="@+id/tv_dialog_text_title"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_dialog_btn" android:background="@color/translate" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ll_dialog_view">
        <Button android:textColor="@color/black" android:id="@+id/bt_dialog_positive" android:background="@drawable/sel_20to50translate" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_margin="2dp" android:maxWidth="60dp" android:minWidth="50dp" android:text="确定" android:layout_weight="1"/>
        <Button android:textColor="@color/black" android:id="@+id/bt_dialog_negative" android:background="@drawable/sel_20to50translate" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_margin="2dp" android:maxWidth="60dp" android:minWidth="50dp" android:text="取消" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
