<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/gray" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/set_rl_f" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="20sp" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_backup_export" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <Button android:id="@+id/btn_support_back" android:background="@drawable/sel_arrow_gray2black_left" android:layout_width="50dp" android:layout_height="50dp" android:scaleType="center" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/black_tran_es" android:gravity="center" android:id="@+id/iv_backup_instrution" android:layout_width="30dp" android:layout_height="match_parent" android:text="?" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/v_line_1" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btn_export" android:background="@drawable/sel_white2blue_frame" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="@dimen/margin_activity_horizontal" android:layout_marginTop="@dimen/margin_activity_horizontal" android:layout_marginRight="@dimen/margin_activity_horizontal" android:text="@string/str_export_csv" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="12sp" android:gravity="center" android:paddingTop="@dimen/margin_medium_vertical" android:paddingBottom="@dimen/margin_activity_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:maxWidth="220dp" android:text="-----以下为备份相关-----" style="@style/style_txt_content"/>
        <RelativeLayout android:id="@+id/rl_auto_backup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_activity_horizontal" android:layout_marginRight="@dimen/margin_activity_horizontal">
            <Button android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/btn_auto_backup" android:background="@drawable/sel_white2blue" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginTop="1dp" android:text="@string/str_auto_backup"/>
            <ImageView android:id="@+id/iv_auto_backup" android:layout_width="wrap_content" android:layout_height="35dp" android:layout_marginRight="10dp" android:src="@drawable/ic_on_v2" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_auto_backup_v2_1" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/btn_backup_backup_to_sd" android:background="@drawable/sel_white2blue_frame" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="@dimen/margin_activity_horizontal" android:layout_marginTop="@dimen/margin_half_vertical" android:layout_marginRight="@dimen/margin_activity_horizontal" android:text="@string/str_backup_all_data" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_auto_backup_v2_3" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ProgressBar android:id="@+id/rl_auto_backup_v2_pb" android:layout_width="match_parent" android:layout_height="3px" android:progressDrawable="@drawable/pb_grass_v2" style="?android:attr/progressBarStyleHorizontal"/>
            <TextView android:textSize="10sp" android:id="@+id/tv_auto_backup_v2_percent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="30%" android:layout_below="@+id/rl_auto_backup_v2_pb" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_auto_backup_v2_2" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/btn_backup_leading_in" android:background="@drawable/sel_white2blue_frame" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="@dimen/margin_activity_horizontal" android:layout_marginRight="@dimen/margin_activity_horizontal" android:text="@string/str_leading_in_all_data" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:textSize="12sp" android:id="@+id/textView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_activity_horizontal" android:maxWidth="220dp" android:text="@string/str_prompt_backup_file_can_not_rewrite" style="@style/style_txt_content"/>
    <TextView android:textSize="12sp" android:id="@+id/tv_backup_backup_path_prompt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_activity_horizontal" android:text="@string/str_default_backup_path" style="@style/style_txt_content"/>
    <TextView android:textSize="12sp" android:id="@+id/tv_backup_backup_to_sd_path" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_activity_horizontal" android:text="@string/str_backup_to_sd" style="@style/style_txt_content"/>
</LinearLayout>
