<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/imageView" android:padding="10dp" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="3dp" android:src="@drawable/ic_download_white"/>
    <TextView android:gravity="left" android:id="@+id/fileName" android:layout_width="wrap_content" android:layout_height="20dp" android:text="爱今天" android:layout_toRightOf="@+id/imageView" android:layout_centerVertical="true"/>
    <TextView android:gravity="right" android:id="@+id/rate" android:layout_width="wrap_content" android:layout_height="20dp" android:text="0%" android:layout_toRightOf="@+id/fileName" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ProgressBar android:id="@+id/progress" android:layout_width="match_parent" android:layout_height="10px" android:layout_marginBottom="3dp" android:layout_toRightOf="@+id/imageView" android:layout_alignBottom="@+id/imageView" style="?android:attr/progressBarStyleHorizontal"/>
</RelativeLayout>
