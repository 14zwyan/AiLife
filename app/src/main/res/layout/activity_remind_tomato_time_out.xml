<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/gray" android:fitsSystemWindows="true" android:layout_width="310dp" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/set_rl_f" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="20sp" android:textColor="@android:color/black" android:id="@+id/tv_remind_tomato_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_take_a_rest" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_add_note_close" android:clickable="true" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/sel_close_gray2black" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/v_remind_rest_line" android:background="@color/black_tran_es" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <com.record.myLife.view.DeliberateStarView android:id="@+id/de_rating_star" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="15sp" android:textColor="@color/black_tran_es" android:gravity="top" android:id="@+id/tv_remind_tomato_message" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:hint="@string/str_rest_for_study" android:ems="10" android:inputType="textMultiLine" style="@style/style_txt_content"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <TextView android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="评价："/>
        <RatingBar android:id="@+id/rb_add_note_rate" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/ratingBarStyleIndicator"/>
    </LinearLayout>
    <HorizontalScrollView android:id="@+id/hs_remind_tomato_items" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_remind_tomato_items" android:layout_width="match_parent" android:layout_height="80dp" style="@style/style_txt_content"/>
    </HorizontalScrollView>
    <TextView android:textColor="@color/black_tran_fs" android:gravity="center" android:id="@+id/tv_remind_tomato_label" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:hint="@string/str_click_to_select_label" android:singleLine="true" android:drawableLeft="@drawable/ic_label" style="@style/style_txt_content"/>
    <LinearLayout android:gravity="center" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:gravity="center" android:id="@+id/btn_add_note_rest" android:background="@drawable/huz_btn_bg" android:layout_width="100dp" android:layout_height="35dp" android:text="@string/str_rest" style="@style/style_txt_content"/>
        <RelativeLayout android:id="@+id/rl_delay" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:gravity="center" android:id="@+id/btn_add_note_delay" android:background="@drawable/huz_btn_bg" android:layout_width="100dp" android:layout_height="35dp" android:layout_marginLeft="5dp" android:text="@string/str_delay" style="@style/style_txt_content"/>
            <ImageView android:id="@+id/iv_add_note_delay" android:layout_width="8dp" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:src="@drawable/ic_right_arrow" android:layout_alignTop="@+id/btn_add_note_delay" android:layout_alignRight="@+id/btn_add_note_delay" android:layout_alignBottom="@+id/btn_add_note_delay"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_remind_rest_delay_items" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@color/black_tran_es" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:gravity="center" android:id="@+id/btn_remind_rest_delay1" android:background="@drawable/huz_btn_bg" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_margin="2dp" android:text="3min" android:layout_weight="1" style="@style/style_txt_content"/>
            <Button android:gravity="center" android:id="@+id/btn_remind_rest_delay2" android:background="@drawable/huz_btn_bg" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_margin="2dp" android:text="5min" android:layout_weight="1" style="@style/style_txt_content"/>
            <Button android:gravity="center" android:id="@+id/btn_remind_rest_delay3" android:background="@drawable/huz_btn_bg" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_margin="2dp" android:text="8min" android:layout_weight="1" style="@style/style_txt_content"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_remind_rest_convert_to_counter" android:paddingLeft="10dp" android:paddingTop="15dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:gravity="center" android:id="@+id/btn_remind_rest_covert_to_counter" android:background="@drawable/huz_btn_bg" android:visibility="gone" android:layout_width="210dp" android:layout_height="30dp" android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:text="转为计时器" android:layout_centerHorizontal="true" style="@style/style_txt_content"/>
        <ImageView android:id="@+id/iv_remind_rest_drag_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sel_down_arrow" android:layout_below="@+id/btn_remind_rest_covert_to_counter" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
