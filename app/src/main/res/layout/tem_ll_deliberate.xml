<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:dslv="http://schemas.android.com/apk/res/com.record.myLife" android:gravity="center" android:orientation="vertical" android:background="@color/translate" android:paddingTop="@dimen/margin_half_vertical" android:paddingBottom="@dimen/margin_half_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_deleberate_circle_and_prompt" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="60dp" android:layout_height="60dp">
            <ImageView android:id="@+id/iv_total_rating" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/x_circle_blue_1_shap"/>
            <TextView android:textColor="@color/black_tran_es" android:gravity="center" android:id="@+id/tx_total_rating" android:layout_width="match_parent" android:layout_height="match_parent" android:text="0.0"/>
        </RelativeLayout>
        <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:gravity="center" android:id="@+id/tv_deliberate_prompt" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:maxLines="2"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:layout_width="32dp" android:layout_height="wrap_content" android:text="反馈次数"/>
            <RatingBar android:id="@+id/rb_remind_tomato_feedback" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="0.5" style="@style/rating_bar_style"/>
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:id="@+id/tx_deliberate_feedback" android:layout_width="32dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text=""/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:layout_width="32dp" android:layout_height="wrap_content" android:text="不适程度"/>
            <RatingBar android:id="@+id/rb_remind_tomato_unconfortable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="0.5" style="@style/rating_bar_style"/>
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:id="@+id/tx_deliberate_unconfortable" android:layout_width="32dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text=""/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:layout_width="32dp" android:layout_height="wrap_content" android:text="目标清晰"/>
            <RatingBar android:id="@+id/rb_remind_tomato_goal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="0.5" style="@style/rating_bar_style"/>
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:id="@+id/tx_deliberate_goal" android:layout_width="32dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text=""/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:layout_width="32dp" android:layout_height="wrap_content" android:text="专注程度"/>
            <RatingBar android:id="@+id/rb_remind_tomato_focus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="0.5" style="@style/rating_bar_style"/>
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:id="@+id/tx_deliberate_focus" android:layout_width="32dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text=""/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_remind_tomato_total" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:layout_width="32dp" android:layout_height="wrap_content" android:text="总分"/>
            <RatingBar android:id="@+id/rb_remind_tomato_total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="0.1" android:isIndicator="true" style="@style/rating_bar_style"/>
            <TextView android:textSize="@dimen/textSize_Micro_11" android:textColor="@color/black_tran_es" android:id="@+id/tx_deliberate_total_val" android:layout_width="32dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
